{
  "manifest_version": 3,
  "name": "Always on Top, PiP & Side Panel (3 in 1) - Super Pinned Window",
  "version": "4.1.2",
  "description": "Open any tab or link in an always-on-top PiP or a flexible popup window.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "declarativeNetRequest",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open in a pinned window",
    "default_popup": "popup.html"
  },
  "commands": {
    "open_current_tab_pip": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      },
      "description": "Open current tab in PiP (Always-on-Top)"
    },
    "open_current_tab_popup": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Open current tab in Popup (Multiple)"
    },
    "open_current_tab_sidepanel": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open current tab in Side Panel (Docked)"
    }
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
