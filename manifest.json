{
  "manifest_version": 3,
  "name": "Super Pinned Windows",
  "version": "4.1.0",
  "description": "Open any tab or link in an always-on-top PiP or a flexible popup window.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "declarativeNetRequest",
    "sidePanel",  
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open in a pinned window",
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "commands": {
    "open-pip-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Open the current tab in a Picture-in-Picture window"
    },
    "open-popup-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Open the current tab in a popup window"
    },
    "open-sidepanel-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open the current tab in the side panel"
    }
  },
"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
"side_panel": {
    "default_path": "sidepanel.html"
  }
}
